<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景圆形 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- 红色背景 -->
            <corners android:radius="50dp" /> <!-- 圆角，50dp的半径 -->
        </shape>
    </item>

    <!-- 错误标志X -->
    <item android:left="20dp" android:right="20dp" android:top="20dp" android:bottom="20dp">
        <rotate android:fromDegrees="45" android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF" /> <!-- 白色X -->
                <size android:width="10dp" android:height="2dp" />
            </shape>
        </rotate>
    </item>

    <item android:left="20dp" android:right="20dp" android:top="20dp" android:bottom="20dp">
        <rotate android:fromDegrees="-45" android:toDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF" /> <!-- 白色X -->
                <size android:width="10dp" android:height="2dp" />
            </shape>
        </rotate>
    </item>
</layer-list>
