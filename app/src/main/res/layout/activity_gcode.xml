<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- 图片 -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:layout_marginBottom="5dp"
        android:contentDescription="G代码示例图片"

        tools:srcCompat="@tools:sample/backgrounds/scenic" />
    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="5dp" />
    <!-- ScrollView 包裹 G 代码文本 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_x="5dp"
        android:layout_y="86dp">

        <TextView
            android:id="@+id/gcodeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:gravity="start"
            android:padding="10dp"
            android:text="G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本G代码示例文本"
            android:textColor="#000000"
            android:textSize="16sp"
            android:typeface="monospace" />
    </ScrollView>

</LinearLayout>
